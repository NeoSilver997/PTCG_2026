# Environment
NODE_ENV=development

# Server
PORT=4000
ALLOWED_ORIGINS=http://localhost:3334,http://localhost:3333,http://localhost:3332

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ptcg_carddb?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# OAuth
GOOGLE_CLIENT_ID=your-google-client-id
